@model IEnumerable<RoleViewModel>

<a class="btn btn-success" asp-action="Create">Add New Role</a>

<form class="row offset-2 m-2 " asp-action="index">
    <div class="col-8"><input class="form-control" type="text" name="SearchValue" placeholder="EmPloyee's Name '" /></div>
    <div class="col-4"><input class="btn btn-info" type="submit" value="Search" /></div>
</form>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.RoleName</td>
                    <partial name="_ButtonsPartialView" model="role.Id" />
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div>
        <h1> There is no Roles .</h1>
    </div>
}

