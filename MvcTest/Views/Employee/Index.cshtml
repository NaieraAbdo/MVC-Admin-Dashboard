@using Mvc.DAL.Models

@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
}


<a class="btn btn-success" asp-action="Create">Add New Employee</a>

<form class="row offset-2 m-2 " asp-action="index">
    <div class="col-8"><input class="form-control" type="text" name="SearchValue" placeholder="EmPloyee's Name '" /></div>
    <div class="col-4"><input class="btn btn-info" type="submit" value="Search" /></div>
</form>

@if (Model.Count() > 0)
{
    <h1>All Employees</h1>
    <br>
    <table class="table table-striped table-hover mt-3 ">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(e => e.Name)</td>
                @* <td>@Html.DisplayNameFor(e => e.Image)</td> *@
                <td>@Html.DisplayNameFor(e => e.Age)</td>
                <td>@Html.DisplayNameFor(e => e.Salary)</td>
                <td>@Html.DisplayNameFor(e => e.Department)</td>
                <td>@Html.DisplayNameFor(e => e.Address)</td>
                <td>@Html.DisplayNameFor(e => e.Email)</td>
                <td>@Html.DisplayNameFor(e => e.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(e => e.HireDate)</td>
                <td>@Html.DisplayNameFor(e => e.IsActive)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Name</td>
                    @* <td><img src="~/Files/Images/@emp.ImageName" class="rounded " height="40" width="40" /></td> *@
                    <td>@emp.Age</td>
                    <td>@Html.DisplayFor(E => emp.Salary)</td>
                    <td>@Html.DisplayFor(E => emp.Department.Name)</td>
                    @* <td>@emp.Department.Name</td>  Error of this null refrence erroring*@
                    <td>@emp.Address</td>
                    <td>@Html.DisplayFor(E => emp.Email)</td>
                    <td>@emp.PhoneNumber</td>
                    <td>@emp.HireDate</td>
                    @if (emp.IsActive == true)
                    {
                        <td> <i class="fa-solid fa-circle" style="color:green"> </i></td>
                    }
                    else
                    {
                        <td> <i class="fa-solid fa-circle" style="color:red"> </i></td>
                    }
                    <partial name="_ButtonsPartialView" model="@emp.Id" />
                   
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h1>There is no employees</h1>
    </div>
}

