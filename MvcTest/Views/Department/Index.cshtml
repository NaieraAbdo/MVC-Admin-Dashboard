@using Mvc.DAL.Models
@model IEnumerable<Department>

@{
    ViewData["Title"] = "All Departments";
}
<a class="btn btn-success" asp-action="Create">Create New Department</a>

@if (Model.Count() > 0)
{
    <h1>All Departments</h1>
    <br>
    <table class="table table-striped table-hover mt-3 ">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Code)</td>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.DateOfCreation)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
            {
                <tr>
                    <td>@dept.Code</td>
                    <td>@dept.Name</td>
                    <td>@dept.DateOfCreation</td>
                    <partial name="_ButtonsPartialView" model="@dept.Id" />
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h1>There is no departments</h1>
    </div>
}
